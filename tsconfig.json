{
    "compilerOptions": {
        "noImplicitAny": false,
        "noEmitOnError": true,
        "allowJs": true,
        "checkJs": true,
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "noEmit": true,
        "jsx": "preserve",
        "importHelpers": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "baseUrl": ".",
        "types": ["webpack"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx",
        "src/global.d.ts"
    ],
    "exclude": [
        "node_modules"
    ],
}